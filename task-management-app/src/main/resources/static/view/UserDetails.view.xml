<!DOCTYPE xml>
<mvc:View xmlns='sap.m' xmlns:mvc="sap.ui.core.mvc" controllerName="ext.samples.taskmanagement.controller.UserDetails">
	<ResponsivePopover id="detailsPopover" placement="VerticalPreferredBottom" contentWidth="25rem" title="Employee Details" beforeOpen="fetchEmployeeDetails">
		<VBox class="sapUiSmallMargin">
			<HBox class="sapUiSmallMarginBottom" justifyContent="Center">
				<Avatar displaySize="L" src="{details>/employeePhoto}" />
			</HBox>
			<HBox class="sapUiTinyMarginBottom">
				<Label width="6rem" text="Name:" />
				<Text text="{details>/employeeName}" />
			</HBox>
			<HBox class="sapUiTinyMarginBottom">
				<Label width="6rem" text="Job Title:" />
				<Text text="{details>/employeeTitle}" />
			</HBox>
			<HBox class="sapUiTinyMarginBottom">
				<Label width="6rem" text="Department:" />
				<Text text="{details>/employeeDepartment}" />
			</HBox>
			<HBox class="sapUiTinyMarginBottom">
				<Label width="6rem" text="Email:" />
				<Text text="{details>/employeeEmail}" />
			</HBox>
		</VBox>
	</ResponsivePopover>
</mvc:View> 